<Page x:Class="ZlabGrade.Pages.Student.NoticeboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZlabGrade.Pages.Student"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="666"
      Title="ŽlabGrade" Background="Transparent" Loaded="Page_Loaded">
    <Grid>
        <TextBlock x:Name="WarningText" Text="Žádné zprávy k přečtení" Visibility="Hidden" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="24" FontWeight="Bold" FontFamily="Calibri"/>

        <ListBox d:ItemsSource="{d:SampleData ItemCount=10}" x:Name="MessageList" Margin="15,25,400,25" Background="Transparent" BorderThickness="0" SelectionChanged="MessageList_SelectionChanged"/>

        <TextBlock x:Name="HeaderTextBlock" TextWrapping="Wrap" HorizontalAlignment="Right" Margin="0,25,25,0" VerticalAlignment="Top" Foreground="White" FontSize="30" FontWeight="Bold" FontFamily="Calibri" Width="350" Height="35"/>
        <TextBlock x:Name="AuthorTextBlock" TextWrapping="Wrap" HorizontalAlignment="Right" Margin="0,60,25,0" VerticalAlignment="Top" Foreground="Gray" FontSize="20" FontWeight="Bold" FontFamily="Calibri" Width="350" Height="25"/>
        <TextBlock x:Name="MessageTextBlock" TextWrapping="Wrap" HorizontalAlignment="Right" Margin="0,100,25,0" VerticalAlignment="Top" Foreground="White" FontSize="20" FontFamily="Calibri" Width="350" Height="275"/>
    </Grid>
</Page>