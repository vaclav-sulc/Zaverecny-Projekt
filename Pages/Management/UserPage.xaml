<Page x:Class="ZlabGrade.Pages.Management.UserPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ZlabGrade.Pages.Management"
        mc:Ignorable="d"
        d:DesignHeight="370" d:DesignWidth="666"
        Title="ŽlabGrade" Background="Transparent" Loaded="Page_Loaded">
    <Grid>
        <TextBlock x:Name="WarningText" Text="Nebyly nalezeni žádní uživatelé" Visibility="Hidden" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="24" FontWeight="Bold" FontFamily="Calibri"/>

        <Button x:Name="NewUserButton" Content="Založit" Margin="50,35,0,0" VerticalAlignment="Top" Width="110" Height="35" FontSize="20" FontWeight="Bold" FontFamily="Calibri" Background="Purple" Foreground="White" BorderThickness="0" HorizontalAlignment="Left"/>
        <Button x:Name="EditUserButton" Content="Upravit" Margin="50,75,0,0" VerticalAlignment="Top" Width="110" Height="35" FontSize="20" FontWeight="Bold" FontFamily="Calibri" Background="Purple" Foreground="White" BorderThickness="0" HorizontalAlignment="Left"/>
        <Button x:Name="DeleteUserButton" Content="Smazat" Margin="50,115,0,0" VerticalAlignment="Top" Width="110" Height="35" FontSize="20" FontWeight="Bold" FontFamily="Calibri" Background="Purple" Foreground="White" BorderThickness="0" HorizontalAlignment="Left"/>
        
        <ListBox x:Name="UserList" d:ItemsSource="{d:SampleData ItemCount=10}" Margin="205,25,10,25" Background="Transparent" BorderThickness="0"/>
    </Grid>
</Page>