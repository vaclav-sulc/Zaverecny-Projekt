<hc:Window
    x:Class="ZlabGrade.VedeniWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:ZlabGrade"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ŽlabGrade"
    Width="800"
    Height="450"
    Background="Transparent"
    Icon="/Images/ŽlabGrade - Logo Mini.png"
    Loaded="Window_Loaded"
    NonClientAreaHeight="48"
    ResizeMode="NoResize"
    ShowCloseButton="False"
    ShowIcon="False"
    ShowNonClientArea="True"
    ShowTitle="False"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <hc:Window.NonClientAreaContent>
        <Grid Background="Black" MouseLeftButtonDown="NonClientBar_MouseLeftButtonDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel
                Grid.Column="0"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Image
                    Width="32"
                    Height="32"
                    Margin="12,0,0,0"
                    VerticalAlignment="Center"
                    Source="/Images/ŽlabGrade - Logo Mini.png" />
                <TextBlock
                    Margin="12,0"
                    FontSize="22"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="ŽlabGrade" />
            </StackPanel>
            <TextBlock
                x:Name="Info"
                Grid.Column="1"
                Margin="12,0,5,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                FontSize="16"
                Foreground="White"
                Text="" />
            <Menu
                Grid.Column="2"
                VerticalAlignment="Center"
                Background="Transparent"
                BorderThickness="0">
                <MenuItem>
                    <MenuItem.Header>
                        <Path
                            Width="24"
                            Height="24"
                            Data="M406.5 399.6C387.4 352.9 341.5 320 288 320l-64 0c-53.5 0-99.4 32.9-118.5 79.6C69.9 362.2 48 311.7 48 256C48 141.1 141.1 48 256 48s208 93.1 208 208c0 55.7-21.9 106.2-57.5 143.6zm-40.1 32.7C334.4 452.4 296.6 464 256 464s-78.4-11.6-110.5-31.7c7.3-36.7 39.7-64.3 78.5-64.3l64 0c38.8 0 71.2 27.6 78.5 64.3zM256 512A256 256 0 1 0 256 0a256 256 0 1 0 0 512zm0-272a40 40 0 1 1 0-80 40 40 0 1 1 0 80zm-88-40a88 88 0 1 0 176 0 88 88 0 1 0 -176 0z"
                            Fill="White"
                            Stretch="Uniform" />
                    </MenuItem.Header>
                    <MenuItem Click="SettingsButton_Click" Header="Nastavení" />
                    <MenuItem Click="Logout_Click" Header="Odhlásit se" />
                </MenuItem>
            </Menu>
            <Button
                Grid.Column="3"
                Click="Minimize_Click"
                Style="{StaticResource CaptionBtn}"
                ToolTip="Minimalizovat">
                <Path
                    Width="16"
                    Height="24"
                    VerticalAlignment="Bottom"
                    Data="M32 416c-17.7 0-32 14.3-32 32s14.3 32 32 32l448 0c17.7 0 32-14.3 32-32s-14.3-32-32-32L32 416z"
                    Fill="White"
                    Stretch="Uniform" />
            </Button>
            <Button
                Grid.Column="4"
                Click="Maximize_Click"
                Style="{StaticResource CaptionBtn}"
                ToolTip="Maximalizovat">
                <Path
                    Width="16"
                    Height="16"
                    VerticalAlignment="Center"
                    Data="M.3 89.5C.1 91.6 0 93.8 0 96L0 224 0 416c0 35.3 28.7 64 64 64l384 0c35.3 0 64-28.7 64-64l0-192 0-128c0-35.3-28.7-64-64-64L64 32c-2.2 0-4.4 .1-6.5 .3c-9.2 .9-17.8 3.8-25.5 8.2C21.8 46.5 13.4 55.1 7.7 65.5c-3.9 7.3-6.5 15.4-7.4 24zM48 224l416 0 0 192c0 8.8-7.2 16-16 16L64 432c-8.8 0-16-7.2-16-16l0-192z"
                    Fill="White"
                    Stretch="Uniform" />
            </Button>
            <Button
                Grid.Column="5"
                Click="Close_Click"
                Style="{StaticResource CaptionBtn}"
                ToolTip="Zavřít">
                <Path
                    Width="16"
                    Height="16"
                    Data="M342.6 150.6c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L192 210.7 86.6 105.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3L146.7 256 41.4 361.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L192 301.3 297.4 406.6c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L237.3 256 342.6 150.6z"
                    Fill="White"
                    Stretch="Uniform" />
            </Button>
        </Grid>
    </hc:Window.NonClientAreaContent>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="8*" />
        </Grid.RowDefinitions>

        <Label
            Grid.ColumnSpan="2"
            Width="810"
            Height="48"
            HorizontalContentAlignment="Left"
            Background="Purple"
            BorderThickness="0" />
        <Button
            x:Name="NameButton"
            Grid.ColumnSpan="2"
            Height="35"
            Margin="5,7,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="Transparent"
            BorderThickness="0"
            Click="NameButton_Click"
            Content="Jméno Příjmení"
            FontFamily="Calibri"
            FontSize="20"
            FontWeight="Bold"
            Foreground="White" />
        <Button
            x:Name="SettingsButton"
            Grid.Column="1"
            Width="110"
            Height="35"
            Margin="0,7,0,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Background="Transparent"
            BorderThickness="0"
            Click="SettingsButton_Click"
            Content="Nastavení"
            FontFamily="Calibri"
            FontSize="20"
            FontWeight="Bold"
            Foreground="White" />

        <Button
            x:Name="NoticeboardButton"
            Grid.Row="1"
            Width="110"
            Height="35"
            Margin="0,120,0,0"
            VerticalAlignment="Top"
            Background="Purple"
            BorderThickness="0"
            Click="NoticeboardButton_Click"
            Content="Nástěnka"
            FontFamily="Calibri"
            FontSize="20"
            FontWeight="Bold"
            Foreground="White" />
        <Button
            x:Name="SchedulesButton"
            Grid.Row="1"
            Width="110"
            Height="35"
            Margin="0,160,0,0"
            VerticalAlignment="Top"
            Background="Purple"
            BorderThickness="0"
            Click="SchedulesButton_Click"
            Content="Rozvrhy"
            FontFamily="Calibri"
            FontSize="20"
            FontWeight="Bold"
            Foreground="White" />
        <Button
            x:Name="UsersButton"
            Grid.Row="1"
            Width="110"
            Height="35"
            Margin="0,200,0,0"
            VerticalAlignment="Top"
            Background="Purple"
            BorderThickness="0"
            Click="UsersButton_Click"
            Content="Uživatelé"
            FontFamily="Calibri"
            FontSize="20"
            FontWeight="Bold"
            Foreground="White" />

        <Frame
            x:Name="ContentFrame"
            Grid.Row="1"
            Grid.Column="1"
            BorderThickness="0"
            NavigationUIVisibility="Hidden" />
    </Grid>
</hc:Window>