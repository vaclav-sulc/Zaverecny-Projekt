<hc:Window
    x:Class="ZlabGrade.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:ZlabGrade"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ŽlabGrade"
    Width="400"
    Height="450"
    Background="Transparent"
    Icon="/Images/ŽlabGrade - Logo Mini.png"
    ResizeMode="CanMinimize"
    mc:Ignorable="d">
    <Grid>
        <Image
            Height="500"
            Margin="0,-110,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Source="/Images/ŽlabGrade - Logo.png" />

        <hc:TextBox
            x:Name="LoginTextBox"
            Width="330"
            Height="35"
            Margin="0,180,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            hc:InfoElement.Placeholder="Uživatelské jméno"
            BorderThickness="0"
            FontFamily="Calibri"
            FontSize="18"
            TextWrapping="Wrap" />
        <hc:PasswordBox
            x:Name="PasswordBox"
            Width="330"
            Height="35"
            Margin="0,225,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            hc:InfoElement.Placeholder="Heslo"
            BorderThickness="0"
            FontFamily="Calibri"
            FontSize="18"
            ShowEyeButton="True" />

        <Label
            x:Name="WarningLabel"
            Height="30"
            Margin="0,275,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="#d12424"
            BorderThickness="0"
            Content="Zadán neplatný login nebo heslo!"
            FontSize="14"
            FontWeight="Bold"
            Foreground="White"
            Visibility="Hidden" />

        <Button
            x:Name="LoginButton"
            Width="330"
            Height="35"
            Margin="0,350,0,0"
            VerticalAlignment="Top"
            Background="Purple"
            BorderThickness="0"
            Click="LoginButton_Click"
            Content="Přihlásit se"
            FontFamily="Calibri"
            FontSize="20"
            FontWeight="Bold"
            Foreground="White" />
    </Grid>
</hc:Window>