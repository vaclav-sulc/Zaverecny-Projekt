<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:hc="https://handyorg.github.io/handycontrol">

    <SolidColorBrush x:Key="RowHoverBrush"   Color="#FFCC62DE"/> <!-- light purple  -->
    <SolidColorBrush x:Key="CbBg"      Color="#1C1C1C"/>
    <SolidColorBrush x:Key="CbBgHover" Color="#262626"/>

    <!-- TS PISSED ME OFF SM  -->
    <Style x:Key="MyDataGridRowStyle"
           TargetType="DataGridRow"
           BasedOn="{StaticResource DataGridRowStyle}">

        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Background" Value="Transparent"/>

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource RowHoverBrush}"/>
                <Setter Property="Foreground" Value="White"/>
            </Trigger>

            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="Purple"/>
                <Setter Property="Foreground" Value="White"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- █ 3)  Styl pro celý DataGrid – jen přepojí RowStyle  -->
    <Style x:Key="Skibidi"
           TargetType="DataGrid"
           BasedOn="{StaticResource {x:Type DataGrid}}">
        <Setter Property="RowStyle" Value="{StaticResource MyDataGridRowStyle}"/>
        
    </Style>


    <Style x:Key="PurpleListItem"
       TargetType="ComboBoxItem"
       BasedOn="{StaticResource ListBoxItemBaseStyle}">

        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="Padding"    Value="6,3"/>

        <Style.Triggers>
            <!-- kurzor nad řádkem -->
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource RowHoverBrush}"/>
                <Setter Property="Foreground" Value="White"/>
            </Trigger>

            <!-- vybraná položka -->
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="Purple"/>
                <Setter Property="Foreground" Value="White"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style x:Key="MyComboBox"
       TargetType="hc:ComboBox"
       BasedOn="{StaticResource {x:Type hc:ComboBox}}">

        <!-- statické settery -->
        <Setter Property="Background" Value="{StaticResource CbBg}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="Purple"/>
        <Setter Property="SelectionBrush" Value="{DynamicResource RowHoverBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="hc:BorderElement.CornerRadius" Value="6"/>
        <Setter Property="ItemContainerStyle" Value="{StaticResource PurpleListItem}"/>


        <!-- triggery -->
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource CbBgHover}"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value=".5"/>
            </Trigger>
            <!-- rozbalený stav -->
            <Trigger Property="IsDropDownOpen" Value="True">
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="BorderBrush" Value="Purple"/>
            </Trigger>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderBrush" Value="Purple"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>