<Window x:Class="ZlabGrade.UcitelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZlabGrade"
        mc:Ignorable="d"
        Icon="/Obrázky/ŽlabGrade - Logo Mini.png"
        Title="ŽlabGrade" Height="450" Width="800" Background="Transparent">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="8*" />
        </Grid.RowDefinitions>

        <Label x:Name="TeacherLabel" Content="Jiří Richter" Grid.ColumnSpan="2" HorizontalContentAlignment="Left" Padding="20,0,0,0" Width="800" Height="48" FontSize="20" FontWeight="Bold" Background="Purple" Foreground="White" BorderThickness="0"/>

        <Button x:Name="GradesButton" Content="Známky" Grid.Column="0" Grid.Row="1" Margin="0,80,0,0" VerticalAlignment="Top" Width="170" Height="35" FontSize="20" FontWeight="Bold" FontFamily="Calibri" Background="Purple" Foreground="White" BorderThickness="0"/>
        <Button x:Name="AbsenceButton" Content="Absence" Grid.Column="0" Grid.Row="1" Margin="0,120,0,0" VerticalAlignment="Top" Width="170" Height="35" FontSize="20" FontWeight="Bold" FontFamily="Calibri" Background="Purple" Foreground="White" BorderThickness="0"/>
        <Button x:Name="PenaltiesButton" Content="Kázeňská opatření" Grid.Column="0" Grid.Row="1" Margin="0,160,0,0" VerticalAlignment="Top" Width="170" Height="35" FontSize="20" FontWeight="Bold" FontFamily="Calibri" Background="Purple" Foreground="White" BorderThickness="0"/>
        <Button x:Name="ScheduleButton" Content="Rozvrh" Grid.Column="0" Grid.Row="1" Margin="0,200,0,0" VerticalAlignment="Top" Width="170" Height="35" FontSize="20" FontWeight="Bold" FontFamily="Calibri" Background="Purple" Foreground="White" BorderThickness="0"/>
        <Button x:Name="SubjectsButton" Content="Předměty" Grid.Column="0" Grid.Row="1" Margin="0,240,0,0" VerticalAlignment="Top" Width="170" Height="35" FontSize="20" FontWeight="Bold" FontFamily="Calibri" Background="Purple" Foreground="White" BorderThickness="0"/>

        <Button x:Name="SettingsButton" Content="Nastavení" Grid.Column="1" Grid.Row="0" Margin="460,5,0,0" VerticalAlignment="Top" Width="140" Height="35" FontSize="20" FontWeight="Bold" FontFamily="Calibri" Background="Transparent" Foreground="White" BorderThickness="0"/>
    </Grid>
</Window>