<Window x:Class="Zaverecny_Projekt.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zaverecny_Projekt"
        mc:Ignorable="d"
        Title="ŽlabGrade" MinHeight="450" MinWidth="400" MaxHeight="450" MaxWidth="400">
    <Grid>
        <Label Content="ŽlabGrade" HorizontalAlignment="Center" Margin="0,30,0,0" VerticalAlignment="Top" FontSize="40" FontWeight="Bold"/>

        <Label x:Name="Warning_Label" Content="Zadán neplatný login nebo heslo!" Visibility="Hidden" HorizontalAlignment="Center" Margin="0,135,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Background="Red" Foreground="White"/>

        <TextBox x:Name="Login_TextBox" HorizontalAlignment="Center" Margin="0,180,0,0" Text="Uživatelské jméno" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" Height="30" FontSize="16" FontStyle="Italic" Foreground="Gray" GotFocus="Login_TextBox_GotFocus" LostFocus="Login_TextBox_LostFocus"/>
        <TextBox x:Name="Password_TextBox" HorizontalAlignment="Center" Margin="0,220,0,0" Text="Heslo" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" Height="30" FontSize="16" FontStyle="Italic" Foreground="Gray" GotFocus="Password_TextBox_GotFocus" LostFocus="Password_TextBox_LostFocus"/>
        
        <Button x:Name="Login_Button" Content="Přihlásit se" HorizontalAlignment="Center" Margin="0,290,0,0" VerticalAlignment="Top" Width="250" Height="35" FontSize="20" FontWeight="Bold" Background="Purple" Foreground="White" Click="Login_Button_Click"/>
    </Grid>
</Window>